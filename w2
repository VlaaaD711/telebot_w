# import telebot

#bot = telebot.TeleBot('949440384:AAEx9mxvxnwIgIXDyIs5uKn-CMENYUoRmn4')

@bot.message_handler(content_types=['text'])
def send_echo(message):
  try:
    observation = owm.weather_at_place(message.text)
    w = observation.get_weather()
    temp=w.get_temperature('celsius')['temp']

    answer = f"В городе {message.text} сейчас {w.get_detailed_status()} \n"
    answer += f"Температура в районе {round(temp)} градусов\n\n"

    if temp<10:
      answer += 'Даша, на улице очень холодно, оденься потеплее))'
    elif temp<17:
      answer += 'Даша, там - прохладно, лучше оденься:)'
    else:
      answer += 'Не холодно, хоть в трусах иди...хотя лучше ограничится шортами и рубашкой:)'

    bot.send_message(message.chat.id, answer)
  except pyowm.exceptions.api_response_error.NotFoundError:
      bot.send_message(message.chat.id, 'Город не найден :(')


      bot.polling(none_stop = True)